{
  "extends": "../tsconfig.json", 
  "compilerOptions": {
    "rootDir": "src", // Make sure source files are under src
    "outDir": "dist", // All compiled files go into dist
    "esModuleInterop": true, // Allow better compatibility with imports
    "skipLibCheck": true, // Skip checking lib files for speed
    "noImplicitAny": true, // Optional: helps catch potential issues early
    "moduleResolution": "node", // Use Node-style module resolution
    "target": "ES6" // Or higher version if needed
  },
  "include": ["src"], // Ensure all files under src are included
  "typeRoots": ["./node_modules/@types", "./src/types"] // Include custom types
}
